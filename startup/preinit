###
# XEN CLEAN INSTALLER
# Startup script
#
# by Andrew Peace

# Test if started by init (or recursively by preinit)
if [ "$1" == "--" ] ; then
    started_by_init=0
else
    started_by_init=1
fi

export LVM_SYSTEM_DIR=/tmp/lvm

console=tty0
term=vt102
interactive=1
bash_shell=0
atexit=reboot
sshpassword=""
OLDIFS="$IFS"
IFS="
"
# spaces separate arguments except for spaces enclosed by a pair of double quotes
args=$(sed -e s'/ *$//' -e 's/\(\("[^"]*"\)*\) \+/\1\n/g' /proc/cmdline)
set --
for arg in $args; do
  copy=1
  case "$arg" in
    answerfile=* | rt_answerfile=* | answerfile_generator=*)
      interactive=0;;
    console=*)
      console=${arg#console=};;
    term=*)
      term=${arg#term=};;
    bash-shell | shell)
      bash_shell=1
      copy=0;;
    atexit=*)
      atexit=${arg#atexit=}
      copy=0;;
    blacklist=* | enable-ide | extramodules=* | make-ramdisk=*)
      copy=0;;
    mount=* | start=*)
      copy=0;;
    sshpassword=*)
      sshpassword=${arg#sshpassword=}
      copy=0;;
  esac
  [ $copy -eq 1 ] && set -- "$@" "--$arg"
done

if [ $started_by_init -eq 1 ]; then
  # started by init on the console

  # force TERM if on a serial console (Xen defeats init's attempt to do this)
  case "$console" in hvc*|ttyS*) export TERM=$term;; esac

  if [ $bash_shell -eq 1 ]; then
    echo "Exiting this shell will run the installer:"
    echo " /opt/xensource/installer/init" "$@"
    echo "---"
    IFS="$OLDIFS" /bin/bash
  elif [ $interactive -eq 1 ]; then
    # start clones on all other consoles
    for arg in $args; do
      case "$arg" in
        console=*)
          c=${arg#console=}
	  if [ $c != $console ]; then
	    b=9600
	    t=linux
	    case "$c" in
	      hvc*|ttyS*)
		xencon=`expr "$(xeninfo xen-commandline)" : '.*\(com.=[^ ]*\)'`
		co=`expr "$c" : '\(ttyS.*\),'`
		br=`expr "$xencon" : 'com.*=\([0-9]*\)'`
		[ -n "$co" ] && c=$co
		[ -n "$br" ] && b=$br
		t=$term;;
	    esac
	    /sbin/getty -n -l $0 $c $b $t &
	  fi
      esac
    done
  fi

  if [ -n "$sshpassword" ]; then
      echo root:$sshpassword | chpasswd
      /etc/init.d/dropbear start
  fi
fi

[ $atexit = reboot ] && extra_args=--reboot
/opt/xensource/installer/init "$@" $extra_args
[ $atexit = shell ] && IFS="$OLDIFS" /bin/bash
[ $atexit = poweroff ] && poweroff
